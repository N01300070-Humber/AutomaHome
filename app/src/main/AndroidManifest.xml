<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="ca.humbermail.n01300070.automahome">
	
	<application
		android:allowBackup="true"
		android:fullBackupContent="@xml/backup_descriptor"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/Theme.AutomaHome">
		<activity
			android:name=".MainActivity"
			android:screenOrientation="portrait"
			android:theme="@style/splashScreen">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".ui.login.RegisterActivity"
			android:label="@string/title_activity_register"
			android:screenOrientation="portrait" />
		<activity
			android:name=".WelcomeActivity"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.login.SignInActivity"
			android:label="@string/title_activity_login"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.login.LoginActivity"
			android:screenOrientation="portrait" />
		<activity
			android:name=".NavDrawerActivity"
			android:label="@string/title_activity_nav_drawer"
			android:screenOrientation="portrait"
			android:theme="@style/Theme.AutomaHome.NoActionBar" />
		<activity
			android:name=".ui.devices.DeviceSearchActivity"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.devices.control.ControlDevicesActivity"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.devices.edit.EditDevicesActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name=".ui.tasks.EditTaskActivity"
			android:screenOrientation="portrait" />
		<activity
			android:name=".ui.tasks.condition.EditConditionActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name=".ui.tasks.operation.EditOperationActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name=".ui.manageHome.AddNetworkActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name=".ui.manageHome.InviteUserActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize" />
	</application>

</manifest>