<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tasks.operation.EditOperationLightsFragment">
    
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_controlLight_deviceSelect"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/select_device"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">
        
        <AutoCompleteTextView
            android:id="@+id/autoCompleteText_controlLight_deviceSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:singleLine="true" />
    
    </com.google.android.material.textfield.TextInputLayout>
    
    <ca.humbermail.n01300070.automahome.components.ColourPickerView
        android:id="@+id/colourPickerView_editOperationLights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_controlLight_deviceSelect" />

</androidx.constraintlayout.widget.ConstraintLayout>