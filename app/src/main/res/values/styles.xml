<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Application themes -->
	<style name="Theme.AutomaHome.NoActionBar" parent="Theme.AutomaHome">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>
	
	<style name="Theme.AutomaHome.Light.NoActionBar" parent="Theme.AutomaHome.Light">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>
	
	<style name="Theme.AutomaHome.Dark.NoActionBar" parent="Theme.AutomaHome.Dark">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>
	
	<style name="Theme.AutomaHome.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/primary_500</item>
		<item name="colorPrimaryVariant">@color/primary_700</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/accent_200</item>
		<item name="colorSecondaryVariant">@color/accent_700</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
		<item name="backgroundColor">@color/cardview_light_background</item>
		<item name="android:windowBackground">@color/cardview_light_background</item>
	</style>
	
	<style name="Theme.AutomaHome.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/primary_200</item>
		<item name="colorPrimaryVariant">@color/primary_700</item>
		<item name="colorOnPrimary">@color/black</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/accent_200</item>
		<item name="colorSecondaryVariant">@color/accent_200</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
		<item name="backgroundColor">@color/cardview_dark_background</item>
		<item name="android:windowBackground">@color/cardview_dark_background</item>
	</style>
	
	<style name="Theme.AutomaHome.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
	
	<style name="Theme.AutomaHome.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
	
	
	<!-- Component themes -->
	<style name="Widget" />
	<style name="Widget.AutomaHome" />
	
	<style name="Widget.AutomaHome.ExtFAB" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"/>
	<style name="Widget.AutomaHome.ExtFAB.PrimaryColour" parent="Widget.AutomaHome.ExtFAB">
		<item name="backgroundTint">@color/design_default_color_primary</item>
		<item name="iconTint">@color/design_default_color_on_primary</item>
		<item name="android:textColor">@color/design_default_color_on_primary</item>
	</style>
	
	<style name="Widget.AutomaHome.Spinner" parent="Widget.AppCompat.Spinner.DropDown">
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingTop">8dp</item>
		<item name="android:paddingBottom">8dp</item>
	</style>

	<style name="Widget.AutomaHome.SeekBar" parent="Widget.AppCompat.SeekBar">
		<item name="android:thumbTint">@color/design_default_color_primary</item>
		<item name="android:progressTint">@color/design_default_color_primary</item>
	</style>

	<style name="Widget.AutomaHome.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
		<item name="android:thumbTint">@color/design_default_color_primary</item>
	</style>

	<style name="TextAppearance.AutomaHome.Temp" parent="TextAppearance.MaterialComponents.Headline3">
		<item name="android:textColor">@color/design_default_color_secondary</item>
	</style>

</resources>