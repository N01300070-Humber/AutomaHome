<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="src_atop"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.settings.NotificationSettingsFragment">


    <ImageButton
        android:id="@+id/general3btn"
        android:layout_width="135dp"
        android:layout_height="53dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#00FFFFFF"

        android:onClick="generalBtn_Clicked"
        android:src="@drawable/general2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageButton>


    <ImageButton
        android:id="@+id/account2btn"
        android:layout_width="135dp"
        android:layout_height="53dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#00FFFFFF"

        android:onClick="accountBtn_Clicked"
        android:src="@drawable/setting_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageButton>

    <ImageButton
        android:id="@+id/notification3btn"
        android:layout_width="135dp"
        android:layout_height="53dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#00FFFFFF"

        android:src="@drawable/notification2"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageButton>

    <TextView
        android:id="@+id/textView_notifications"
        android:layout_width="187dp"
        android:layout_height="29dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="@string/notifications"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/general3btn" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="61dp"
        android:layout_height="34dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="84dp"
        android:checked="true"
        android:switchMinWidth="56dp"
        android:textOff="OFF"
        android:textOn="ON"
        android:thumbTint="#671DEC"
        android:trackTint="#5D1BD1"
        app:layout_constraintStart_toEndOf="@+id/textView_notifications"
        app:layout_constraintTop_toTopOf="@+id/account2btn"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>